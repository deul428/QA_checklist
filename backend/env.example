# 데이터베이스 설정
# SQLite 사용 (기본값)
DATABASE_URL=sqlite:///./qa_checklist.db

# 또는 PostgreSQL 사용
# DATABASE_URL=postgresql://user:password@localhost:5432/qa_checklist

# JWT 시크릿 키
SECRET_KEY=your-secret-key-here-change-this-in-production

# SMTP 설정 (Gmail 사용 시)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_FROM_NAME=DX본부 시스템 체크리스트
SMTP_USE_SSL=false

# CC 이메일 (선택사항, 쉼표로 구분)
# SMTP_CC_EMAILS=admin1@example.com,admin2@example.com

# CORS 설정 (선택사항)
# CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# 디버그 모드 (선택사항)
# DEBUG=true

# 스케줄러 테스트 이메일 (선택사항, 테스트 모드에서 사용)
# SCHEDULER_TEST_EMAIL=test@example.com

